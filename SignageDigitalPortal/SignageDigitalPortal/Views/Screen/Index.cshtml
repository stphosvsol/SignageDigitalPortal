@using SignageRepository.Resources
@{
    ViewBag.Title = "Pantallas";
}

@section styles
{
    @Styles.Render("~/Content/jqGrid")
}

@section scripts
{
    @Scripts.Render("~/bundles/jqGrid")
    <script src="~/Scripts/App/Shared/upsertCtrl.js"></script>
    <script src="~/Scripts/App/Shared/modalDlgCtrl.js"></script>
    <script src="~/Scripts/App/Shared/hiddenDrct.js"></script>
    <script src="~/Scripts/App/Screen/ScreenCtrl.js"></script>

    <script>
        $(document).ready(function() {
            window.upsert = function (id) {
                window.goToUrlMvcUrl('@Url.Action("Upsert", "Screen", new {area = "", id = "paramId"})', { paramId: id });
            };

            window.obsolete = function(id) {
                window.showObsolete(id, "#angJsjqGridId", "@Url.Action("DoObsolete", "Screen", new { area = "" })", "#GridScreenId");
            };

            jQuery("#GridScreenId").jqGrid({
                url: '@Url.Action("List", "Screen", new {area = ""})',
                datatype: "json",
                mtype: 'POST',
                colNames: ['ID', 'Nombre', 'Tamaño', 'Canal(es)', 'Fecha de creación', 'Usuario', 'Acción'],
                colModel: [
                    { name: 'ScreenId', index: 'ScreenId', hidden: true },
                    { name: 'Name', index: 'Name', width: 200, align: "center", sorttype: 'string', searchoptions: { sopt: ['bw'] } },
                    { name: 'ScreenSize', index: 'ScreenSize', width: 100, align: "center", search: false },
                    { name: 'LstChannels', index: 'LstChannels', width: 500, align: "center", search: false },
                    { name: 'DatetimeScreen', index: 'DatetimeScreen', width: 110, align: "center", search: false },
                    { name: 'UserName', index: 'UserName', width: 110, align: "center", search: false },
                    { name: 'Action', align: "center", width: 90, sortable: false, search: false }
                ],
                rowNum: 30,
                rowList: [30, 60, 90],
                pager: '#GridScreenPager',
                sortname: 'Name',
                height: 450,
                viewrecords: true,
                shrinkToFit: false,
                sortorder: "desc",
                caption: "Pantallas",
                gridComplete: function() {
                    var ids = $(this).jqGrid('getDataIDs');
                    for (var i = 0; i < ids.length; i++) {
                        var cl = ids[i];
                        var be = "<a href=\"javascript:;\" style=\"display:inline-block;\" title=\"Editar canal\" onclick=\"window.upsert('" + cl + "');\"><span class=\"ui-icon ui-icon-pencil\"></span></a>";
                        be += "<a href=\"javascript:;\" style=\"display:inline-block;\" title=\"Eliminar canal\" onclick=\"window.obsolete('" + cl + "');\"><span class=\"ui-icon ui-icon-trash\"></span></a>";
                        $(this).jqGrid('setRowData', ids[i], { Action: be });
                    }
                }
            });

            jQuery("#GridScreenId").jqGrid('navGrid', '#GridScreenPager', { edit: false, add: true, del: false, search: true, addfunc: upsert });

            jQuery("#GridScreenId").jqGrid('filterToolbar', {
                stringResult: true,
                searchOperators: true,
                searchOnEnter: true,
                multipleSearch: true,
                ignoreCase: true
            });
        });

    </script>
}

<h2 class="element-center"><i class="glyphicon glyphicon-th"></i>&nbsp;&nbsp;@ResScreenRep.TITLE_PAGE_CAT</h2>

<div id="angJsjqGridId" ng-controller="modalDlgController">
    <table id="GridScreenId" class="element-center" style="margin: auto"></table>
    <div id="GridScreenPager"></div>
    <div class="blocker" ng-show="working">
        <div>
            Cargando...<img src="~/Content/Images/ajax_loader.gif" alt="" />
        </div>
    </div>
</div>



